<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cdApartamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primario"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="5dp">

        <LinearLayout
            android:id="@+id/lytItemApt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgApartamento"
                android:layout_width="@dimen/imagen_vivienda"
                android:layout_height="@dimen/imagen_vivienda"
                android:layout_margin="@dimen/margin_titulo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombreApartamento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/margin_titulo"
                    android:text="@string/label_apartamento"
                    android:textSize="@dimen/tamanio_titulo" />

                <TextView
                    android:id="@+id/txtValor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_titulo"
                    android:layout_marginBottom="5dp"
                    android:gravity="right"
                    android:text="@string/label_costo"
                    android:textColor="@color/red"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>