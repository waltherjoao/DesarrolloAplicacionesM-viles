<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetalleApartamento">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imgDetalleApart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tamanio_titulo"
                app:srcCompat="@drawable/ic_market_shopping_store_icon" />

            <TextView
                android:id="@+id/txtDescripcionCasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tamanio_titulo"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/purple_700"
                android:textSize="@dimen/tamanio_titulo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tamanio_titulo"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/purple_200"
                android:textSize="@dimen/tamanio_titulo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_titulo"
                android:layout_marginRight="@dimen/margin_titulo"
                android:gravity="end"
                android:text="TextView"
                android:textColor="@color/red" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>